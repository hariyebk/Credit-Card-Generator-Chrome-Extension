{
    "manifest_version": 2,
    "name": "Harun CCG",
    "version": "1.0",
    "description": "A simple credit card generator extension",
    "icons": {
        "128": "128.png"
    },
    "urls": ["http://certification.googleapps.com/app-info/"],
    "launch": {
        "web_url": "http://certification.googleapps.com/"
    },
    "background": {
        "service_worker": "background.js"
    },
    "browser_action": {
        "default_icon": "128.png",
        "default_popup": "popup.html"
    },
    "permissions": ["tabs", "activeTab", "unlimitedStorage", "notifications"]
}